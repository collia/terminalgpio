import os

env = Environment(ENV = os.environ)

env.Append(CPPPATH = [
    '#.',
    '#../src/parser/',
    '#../inc/'])

env.Append(LIBPATH = [
    './lib'
    ])

Export('env')
SConscript(['../src/parser/SConscript'])

env.VariantDir('.', '../src', duplicate=0)


env.Program(target='utest', LIBS=['libterminal'], source=['termutest.c',         
                                                          'ringbutest.c',
                                                          'gpio_tim.c',
                                                          'myposixutest.c',
                                                          'timconfigutest.c',
                                                          'termutest_mock.c',
                                                          'utest.c'])
